<div id="<%= dom_id tag %>">
  <h2>
    <strong>Tag:</strong>
    <%= tag.name %>
  </h2>

  <% tag.taggables.each do |taggable| %>
    <h3>Post:</h3>
    <div class="card mb-3">
      <div class="card-body">
        <h4 class="card-title"><%= taggable.post.title %></h4>
        <p class="card-text"><%= truncate(taggable.post.body.to_plain_text, length: 200) %></p>
        <%= link_to "Read More", taggable.post, class: "btn btn-primary" %>
      </div>
    </div>
    <hr />
  <% end %>

  
</div>