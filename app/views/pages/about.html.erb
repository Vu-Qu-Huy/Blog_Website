<!-- Page content-->
<div class="container">
  <div class="row">
    <!-- Blog entries-->
    <div class="col-lg-8">
      <!-- Search form -->
<%= search_form_for @q, url: about_path, method: :get do |f| %>
  <div class="mb-4">
    <%= f.label :plain_text_body_cont, "Search:" %>
    <div class="input-group">
      <%= f.search_field :plain_text_body_cont, class: "form-control" %>
      <div class="input-group-append">
        <%= f.submit "Search", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>


      <!-- Loop through posts -->
      <div class="grid gap-8 lg:grid-cols-2 ">
        <% @posts.each do |post| %>
          <div class="card mb-3 max-w-screen-md mx-auto bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700 relative">
            <div class="flex flex-col md:flex-row">
              <% if post.preview_image.attached? %>
               <div class="md:w-1/3 flex items-center justify-center mt-6">
                   <div class="md:w-1/3 mt-5">
                <%= image_tag post.preview_image, class: "w-full h-48 object-cover rounded-t-lg md:rounded-l-lg", alt: "Image for #{post.title}" %>
              </div>
                </div>
              <% end %>
              <div class="p-4 md:w-2/3">
                <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white mb-2"><%= post.title %></h5>
                <p class="text-gray-700 dark:text-gray-400 mb-3"><%= truncate(post.body.to_plain_text, length: 200) %></p>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4"><small><%= time_ago_in_words(post.created_at) %> ago</small></p>
                <div class="flex justify-between items-center mb-4">
                 
                  <p class="text-sm font-medium text-gray-900 dark:text-white"><%= post.likes.count %> <%= (post.likes.count == 1 ? 'Like' : 'Likes') %></p>
                </div>

                <div class="absolute bottom-4 right-4">
                  <%= link_to "Read more", post_path(post), class: "btn btn-primary jump-link flat-button ripple" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Side widgets-->
      <!-- Categories widget-->
    <div class="col-lg-4">
       <div class="card mb-4">
    <div class="card-header">Categories</div>
      <div class="card-body">
        <ul class="list-unstyled">
        <% @tags.each do |tag| %>
          <li><%= link_to tag.name, about_path(tag_id: tag.id) %></a></li>
         <% end %>
      </ul>
      </div>
    </div>
      <!-- Side widget-->
      <div class="card mb-4">
  <div class="card-header">Quote of the Day</div>
  <div class="card-body">
    <% quote = quote_of_the_day %>
    <blockquote class="blockquote mb-0">
      <p><%= quote[:text] %></p>
      <footer class="blockquote-footer"><cite title="Source Title"><%= quote[:author] %></footer>
    </blockquote>
  </div>
</div>

  <!-- Pagination-->
  <nav aria-label="Pagination">
    <hr class="my-0" />
    <ul class="pagination justify-content-center my-4">
      <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
      <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
      <li class="page-item"><a class="page-link" href="#!">2</a></li>
      <li class="page-item"><a class="page-link" href="#!">3</a></li>
      <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
      <li class="page-item"><a class="page-link" href="#!">15</a></li>
      <li class="page-item"><a class="page-link" href="#!">Older</a></li>
    </ul>
  </nav>
</div>
