<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('welcome.title') %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .hero {
      background-color: #f8f9fa;
      padding: 60px 0;
      text-align: center;
      border-bottom: 2px solid #e9ecef;
    }
    .hero h1 {
      font-size: 2.5rem;
      font-weight: 700;
    }
    .hero p {
      font-size: 1.25rem;
      color: #6c757d;
    }
    .features {
      padding: 40px 0;
    }
    .feature-icon {
      font-size: 3rem;
      color: #007bff;
    }
    .feature-card {
      text-align: center;
      padding: 20px;
      border: 1px solid #dee2e6;
      border-radius: 8px;
      transition: background-color 0.3s;
    }
    .feature-card:hover {
      background-color: #f1f1f1;
    }
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
    .btn-secondary {
      background-color: #6c757d;
      border-color: #6c757d;
    }
  </style>
</head>
<body>
  <!-- Hero Section -->
  <section class="hero d-flex flex-column align-items-center justify-content-center">
    <div class="container text-center">
      <div class="image-container">
        <%= image_tag "User.svg", class: "card-img-top mx-auto d-block", alt: "...", style: "width: 100px; height: auto;" %>
      </div>
      <h1><%= t('welcome.hero.title') %></h1>
      <p><%= t('welcome.hero.subtitle') %></p>

      <% if user_signed_in? %>
        <a class="btn btn-primary btn-lg" href="/about" role="button"><%= t('welcome.buttons.view_posts') %></a>
        <a class="btn btn-secondary btn-lg" href="/posts/new" role="button"><%= t('welcome.buttons.new_post') %></a>
      <% else %>
        <a class="btn btn-primary btn-lg" href="<%= new_user_session_path %>" role="button"><%= t('welcome.buttons.login') %></a>
        <a class="btn btn-secondary btn-lg" href="<%= new_user_registration_path %>" role="button"><%= t('welcome.buttons.sign_up') %></a>
      <% end %>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features">
    <div class="container">
      <div class="row">
        <!-- Blog Posts Feature -->
        <div class="col-md-4 mb-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="bi bi-file-earmark-text"></i>
            </div>
            <h3 class="mt-3"><%= t('features.blog_posts.title') %></h3>
            <p><%= t('features.blog_posts.description') %></p>
          </div>
        </div>
        
        <!-- Comments Feature -->
        <div class="col-md-4 mb-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="bi bi-chat-dots"></i>
            </div>
            <h3 class="mt-3"><%= t('features.comments.title') %></h3>
            <p><%= t('features.comments.description') %></p>
          </div>
        </div>
        
        <!-- Likes Feature -->
        <div class="col-md-4 mb-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="bi bi-heart"></i>
            </div>
            <h3 class="mt-3"><%= t('features.likes.title') %></h3>
            <p><%= t('features.likes.description') %></p>
          </div>
        </div>
        
        <!-- Tags Feature -->
        <div class="col-md-4 mb-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="bi bi-tag"></i>
            </div>
            <h3 class="mt-3"><%= t('features.tags.title') %></h3>
            <p><%= t('features.tags.description') %></p>
          </div>
        </div>
        
        <!-- Search Bar Feature -->
        <div class="col-md-4 mb-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="bi bi-search"></i>
            </div>
            <h3 class="mt-3"><%= t('features.search.title') %></h3>
            <p><%= t('features.search.description') %></p>
          </div>
        </div>
        
        <!-- Login Requirement -->
        <div class="col-md-4 mb-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="bi bi-lock"></i>
            </div>
            <h3 class="mt-3"><%= t('features.login_required.title') %></h3>
            <p><%= t('features.login_required.description') %></p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.js"></script>
</body>
</html>
